@model IEnumerable<BookinigPortal.Models.News>

@{
    ViewBag.Title = "Clifford Wallace News Admin";
}

<h2>Clifford Wallace News Admin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
<tr>
<th>Release Date</th>
<th>Title</th>
<th>Status</th>
<th>Expiry Date</th>
<th></th>
</tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @String.Format("{0:dd-MMM-yyyy}", item.ReleaseDate)
        </td>
        <td>
            @Html.ActionLink(item.Title, "Details", new { id = item.ID })
        </td>
        <td>
            @if (item.Status == 0) { <text>Draft</text> }
            else if (item.Status == 1) { <text>Released</text> }
            else { <text>Expired</text> }
        </td>
        <td>
            @String.Format("{0:dd-MMM-yyyy}", item.ExpiryDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
